---
import { Icon } from "astro-icon/components";
---
<div class="z-50 sticky">
  <div class="w-full flex justify-between">
    <div class="font-bold titulos-header">LOGO</div>
    <div class="font-bold titulos-header hidden md:flex" style="font-size: 2rem;">
      <button class="btn btn-ghost">T贸pico 1</button>
      <button class="btn btn-ghost">T贸pico 2</button>
      <button class="btn btn-outline rounded-md">Destaque</button>
    </div>
    <div class="drawer drawer-end md:hidden">
      <input id="menu-lateral" type="checkbox" class="drawer-toggle" />
      <div class="flex justify-end">
        <label for="menu-lateral" class="drawer-button btn btn-ghost titulos-header block md:hidden pt-2"><Icon name="mdi:menu"/></label>
      </div>
      <div class="drawer-side">
        <label for="menu-lateral" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu bg-base-200 text-base-content min-h-full w-80 p-4">
          <button class="btn btn-ghost">T贸pico 1</button>
          <button class="btn btn-ghost">T贸pico 2</button>
          <button class="btn btn-outline rounded-md">Destaque</button>
        </ul>
      </div>
    </div>
  </div> 
  <div class="divider mt-2"/>
</div>
<style>
.titulos-header{
  font-size: 2rem;
}
</style>
